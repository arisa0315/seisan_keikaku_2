<h1>生産計画</h1>

<div class="top-container">
  <%= form_with url: production_plans_path, method: :post, local: true do |form| %>
    <div class="top-content-wrapper">
      <!-- 左ブロック -->
      <div class="left-block">
        <div class="top-form-group">
          <label>生産数</label>
          <%= form.text_field :production_count, class: 'form-control' %>
        </div>
        <div class="top-form-group">
          <label>実績</label>
          <%= form.text_field :actual_count, class: 'form-control' %>
        </div>
        <div class="top-form-group">
          <label>可動率</label>
          <%= form.text_field :operation_rate, class: 'form-control', disabled: true, value: "自動計算" %>
        </div>
        <div class="top-form-group">
          <label>終了予定時刻</label>
          <%= form.text_field :end_time, class: 'form-control', disabled: true, value: "自動計算" %>
        </div>
      </div>

      <!-- 右ブロック -->
      <div class="right-block">
        <div class="top-form-group">
          <label>生産開始体制</label>
          <%= form.select :shift_start, options_for_select(['シフトA', 'シフトB', 'シフトC']), class: 'form-control' %>
        </div>
        <div class="top-form-group">
          <label>生産開始時刻</label>
          <div class="top-time-input">
            <%= form.text_field :start_hour, class: 'form-control time-field', placeholder: "HH" %>
            <span>:</span>
            <%= form.text_field :start_minute, class: 'form-control time-field', placeholder: "MM" %>
          </div>
        </div>
        <div class="top-form-group">
          <label>切り替え予定生産体制</label>
          <%= form.select :shift_change, options_for_select(['シフトA', 'シフトB', 'シフトC']), class: 'form-control' %>
        </div>
        <div class="top-form-group">
          <label>切り替え予定時刻</label>
          <%= form.text_field :shift_change_time, class: 'form-control', disabled: true, value: "自動計算" %>
        </div>
      </div>
    </div>
  
    <!-- 新規登録ボタン -->
    <div class="button-group">
      <%= link_to '新規登録', new_registration_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
